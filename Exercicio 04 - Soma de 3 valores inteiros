#include <stdio.h>

int main(void) {
  int num1, num2, num3, soma;

  printf("Informe o 1º número:\n");
  scanf("%d", &num1);
  printf("Informe o 2º número:\n");
  scanf("%d", &num2);
  printf("Informe o 3º número:\n");
  scanf("%d", &num3);

  soma = num1 + num2 + num3;

  printf("A soma dos 3 valores é igual a %d", soma);

  return 0;
}
